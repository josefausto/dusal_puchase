<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_purchaseorder_document_dusal" inherit_id="purchase.report_purchaseorder_document">
    <xpath expr="//t/div[@class='page']/table[@class='table table-condensed']" position="before">
        <t t-set="number" t-value="0"/>
    </xpath>
    <xpath expr="//t/div[@class='page']/table[@class='table table-condensed']/thead/tr/th" position="before">
        <th t-if="o.print_line_number"><strong>No.</strong></th>
        <th t-if="o.print_image"><strong>Image</strong></th>
    </xpath>
    <xpath expr="//t/div[@class='page']/table[@class='table table-condensed']/tbody/tr/td" position="before">
         <td t-if="o.print_line_number">
            <t t-set="number" t-value="number+1"/>
            <span t-esc="number"/>
        </td>
        <td t-if="o.print_image">
            <span t-if="o.image_size == 'small'"><img t-if="line.product_image_small" t-att-src="'data:image/png;base64,%s' % to_text(line.product_image_small)" style="max-width: 100%;"/></span>
            <span t-if="o.image_size == 'medium'"><img t-if="line.product_image_medium" t-att-src="'data:image/png;base64,%s' % to_text(line.product_image_medium)" style="max-width: 200px;"/></span>
            <span t-if="o.image_size == 'original'"><img t-if="line.product_image" t-att-src="'data:image/png;base64,%s' % to_text(line.product_image)" style="max-width: 400px;"/></span>
        </td>
    </xpath>
</template>
</data>
</openerp>
